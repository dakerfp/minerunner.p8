rows={}

function create_row(w)
	row={}
	for i=1,w do
		add(row,17)
	end
	return row
end

function rotate_row(r)
	-- rotate
	nrows={} -- delete rows[1]
	for i=2,#rows do
		add(nrows,rows[i])
	end
	rows=nrows
	add(rows,r)
	-- update map
	for i=1,#rows do
		row=rows[i]
		for j=1,#row do
			mset(j-1,i-1,row[j])
		end
	end
end

function click(x,y)
	rows[y][x]=16
	mset(x-1,y-1,16)
end

vel=0.02
dy=0
function _init()
	poke(0x5f2d, 1)
	rows={}
	for y=1,20 do
		row={}
		for x=1,16 do
			add(row,17)
		end
		add(rows,row)
	end
end

function map_to_grid(mx,my)
	return flr((mx+1)/8)+1, flr((my-dy)/8)+1
end

mx,my,mb=0,0,0
function _update()
	mx,my,mb=mouse()
	if (band(mb,1)==1) then
		x,y=map_to_grid(mx,my)
		click(x,y)
	end
	dy-=vel
	if dy < -8 then
		r=create_row(16)
		rotate_row(r)
		dy+=8
		return
	end
end

